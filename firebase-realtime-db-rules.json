{
  "rules": {
    "schoolOnlineUsers": {
      "$schoolSlug": {
        ".read": true,
        ".write": true
      }
    },
    "schoolHourlyUsers": {
      "$schoolSlug": {
        "$hourWindow": {
          ".read": true,
          ".write": true
        }
      }
    },
    "schoolChats": {
      "$schoolSlug": {
        ".read": true,
        ".write": true,
        ".indexOn": "timestamp"
      }
    },
    "schoolStats": {
      "$schoolSlug": {
        ".read": true,
        ".write": true
      }
    }
  }
}
